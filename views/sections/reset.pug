extends main

block content
  if !user
    form.form-body.signup-form(method='post' action='/users/reset')
      label.label(for='login') Login
      input#login.input(type='text' name='login' required='')
      label.label(for='reset-password1') Input new password
      input#reset-password1.input(type='password' name='password1' required='')
      label.label(for='reset-password2') Repeat password
      input#reset-password2.input(type='password' name='password2' required='')
      label.label(for='secret') Secret word
      input#secret.input(type='text' name='secret' required='')
      input.btn.remind-btn(type='submit' value='Reset password')
